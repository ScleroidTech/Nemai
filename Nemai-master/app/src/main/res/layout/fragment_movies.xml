<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.scleroid.nemai.fragment.MoviesFragment"
    android:elevation="4dp"
    >


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/bg_round"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:id="@+id/real"

        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_round3"
        >

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Courier Discription : "

        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:id="@+id/textView7"
        android:padding="20dp"
        android:layout_marginBottom="15dp"

        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City from : Nanded"

        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"

        android:id="@+id/textView"
        android:padding="30dp"
        android:layout_marginTop="45dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination City : Latur"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:minLines="2"
        android:id="@+id/textView3"

        android:padding="30dp"
        android:layout_marginTop="75dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight : 50 gms"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:minLines="2"
        android:id="@+id/textView4"
        android:padding="30dp"
        android:layout_marginTop="105dp"



        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Package Discription: "
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:minLines="2"
        android:id="@+id/textView5"
        android:padding="30dp"
        android:layout_marginTop="135dp"



        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invoice: 100 RS "
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:id="@+id/textView6"
        android:layout_marginTop="165dp"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        />


    </RelativeLayout>
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/real"

      >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/cardList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        />
    </RelativeLayout>
</RelativeLayout>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dropDownListViewStyle">@style/MyListViewStyle</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="colorControlNormal"></item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton"></style>

    <style name="MyListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:divider">@color/sendotp_grey</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">@dimen/smallTxtSize</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


    <dimen name="smallTxtSize">12sp</dimen>
    //checkbox
    <style name="my_checkbox_style">
        <item name="buttonTint">#fff</item>
    </style>
</resources>

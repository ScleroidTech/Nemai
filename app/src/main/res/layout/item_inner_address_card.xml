<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/inner_item_height"
        android:layout_gravity="center"
        android:clickable="true"
        app:cardCornerRadius="5dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="308dp"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="2"
                android:text="abcdedte"
                android:textColor="@android:color/black"
                android:textSize="@dimen/item_title_text_size"
                app:font='@{"SF-UI-Display-Semibold.ttf"}'
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:layout_width="374dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/line"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/line"
                tools:layout_editor_absoluteY="60dp">

                <TextView
                    android:id="@+id/tv_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/mobileerror"
                    android:textColor="@color/item_name_color"
                    android:textSize="@dimen/item_name_text_size"
                    app:font='@{"SF-UI-Display-Medium.ttf"}' />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="@string/saved_address"
                    android:textColor="@color/item_info_color"
                    android:textSize="@dimen/item_info_text_size"
                    app:font='@{"SF-UI-Display-Regular.ttf"}' />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/prompt_phone_only"
                    android:textColor="@color/item_info_color"
                    android:textSize="@dimen/item_info_text_size"
                    app:font='@{"SF-UI-Display-Regular.ttf"}' />

                <TextView
                    android:id="@+id/tv_pincode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/prompt_mobile"
                    android:textColor="@color/item_info_color"
                    android:textSize="@dimen/item_info_text_size"
                    app:font='@{"SF-UI-Display-Regular.ttf"}' />

            </LinearLayout>

            <View
                android:id="@+id/line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="16dp"
                android:alpha="0.5"
                android:background="@color/item_separator_color"
                app:layout_constraintBottom_toTopOf="@+id/tv_select"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tv_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="0dp"
                android:text="@string/connect"
                android:textColor="@color/header_green"
                android:textSize="@dimen/item_footer_text_size"
                app:font='@{"SF-UI-Display-Semibold.ttf"}'
                app:layout_constraintBottom_toBottomOf="parent" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</layout>
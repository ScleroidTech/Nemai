<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dropDownListViewStyle">@style/MyListViewStyle</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <!--<item name="colorBackground">@color/colorBackground</item>-->
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton" />

    <style name="MyListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:divider">@color/sendotp_grey</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">@dimen/smallTxtSize</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


    <style name="FloatingActionButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/fab_background</item>
        <!--<item name="stateListAnimator">@animator/fab_state_list_animator</item>-->
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog.Alert">

        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    //checkbox

    <style name="my_checkbox_style">
        <item name="buttonTint">#fff</item>
    </style>
</resources>
